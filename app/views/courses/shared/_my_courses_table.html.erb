<table id="my_courses_tables">
  <thead>
    <tr>
      <th>Course Title</th>

      <th>Faculty</th>

      <th>Section</th>

      <th>Day</th>

      <th>Time</th>

      <th>Location</th>

      <th>Code</th>

      <th>Term</th>

      <th>Quarter/Credits</th>
  
      <th>Remove Course?</th>

    </tr>
  </thead>  

  <tbody>
    <% current_user.courses.all.each do |course| %>
      <tr>

        <td>
			<%= link_to course_path(course), :title =>"See who is enrolled in this course" do %>
				<%= course.title %>
			<% end %>
        </td>

        <td>
			<%= course.faculty %>
        </td>

        <td>
			<%= course.section %>
        </td>

        <td>
			<%= course.day %>
        </td>

        <td>
			<%= course.time %>
        </td>

        <td>
      <%= course.location %>
        </td>

        <td>
      <%= course.code %>
        </td>

          <td>
      <%= course.term %>
        </td>

          <td>
      <%= course.quarter_credits %>
        </td>

        <td>
    			<a href='/course/remove/<%= course.id %>' title='Remove this course from my list'>
				Remove Course
		    	</a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<script>
  
  $('#my_courses_tables').dataTable(
        {
          "bPaginate": false,
          "aoColumnDefs": [
            { "sWidth": "40%", 'aTargets': [ 0 ],
            },

            { 'bSortable': false, 'aTargets': [ 9 ],
            }

                          ],
        });

</script>
