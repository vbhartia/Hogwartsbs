<table id="my_courses_tables">
  <thead>
    <tr>
      <th>
      	Course Title

      </th>

      <th>Professor</th>

      <th>Term</th>

      <th>Quarter</th>
  
      <th>Credits</th>

      <th>Course Actions</th>

    </tr>
  </thead>  

  <tbody>
    <% current_user.courses.all.each do |course| %>
      <tr>

        <td>
			<%= link_to course_path(course), :title =>"See who is enrolled in this course" do %>
				<%= course.title %>
			<% end %>
        </td>

        <td>
			<%= course.professor %>
        </td>

        <td>
			<%= course.term %>
        </td>

        <td>
			<%= course.quarter %>
        </td>

        <td>
			<%= course.credits %>
        </td>

        <td>
			<a href='/course/remove/<%= course.id %>'>
				Remove Course
			</a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<script>
  
  $('#my_courses_tables').dataTable(
        {
          "bPaginate": false,
          "aoColumnDefs": [
            { "sWidth": "40%", 'aTargets': [ 0 ],
            },

            { 'bSortable': false, 'aTargets': [ 5 ],
            }

                          ],
        });

</script>
